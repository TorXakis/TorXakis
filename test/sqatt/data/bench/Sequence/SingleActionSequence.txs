-- | Specification of a sequential process that performs a single action
--   repeatedly.

CHANDEF ChanDefs ::=
      MyAct
ENDDEF      

PROCDEF sequence [ Act ] ( ) ::=
    Act >-> sequence [ Act ] ( )
ENDDEF

MODELDEF ForeverAct ::=
    CHAN IN    
    CHAN OUT   MyAct
    BEHAVIOUR
        sequence [ MyAct ] ()
ENDDEF
