name:                sqatt
version:             0.1
synopsis:            Simple Quality Assurance Tests for TorXakis
homepage:            https://github.com/TorXakis/TorXakis/                     
license:             BSD3
license-file:        license.txt
author:              Damian Nadales Agut
maintainer:          damian.nadales@gmail.com
copyright:           2017 TNO
category:            Test          
build-type:          Simple
extra-source-files:  README.md
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     Examples.All
                     , Examples.Paths
                     , Examples.StimulusResponse
                     , Examples.Echo
                     , Sqatt
  build-depends:       base >= 4.7 && < 5
                     , hspec
                     , turtle
                     , system-filepath
                     , text
                     , mtl
                     , network
                     , async
                     , foldl
                     , silently
  default-language:    Haskell2010

test-suite qa-test
  type:                exitcode-stdio-1.0
  hs-source-dirs:      test
  main-is:             Spec.hs
  other-modules:       Examples.AllSpec
                     , Examples.EchoSpec
  build-depends:       base
                     , sqatt
                     , hspec
  ghc-options:         -threaded -rtsopts -with-rtsopts=-N
  default-language:    Haskell2010
