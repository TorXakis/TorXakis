-- ----------------------------------------------------------------------------------------- --
-- Dispatch Process


PROCDEF  processor [ Start, Finish ] ( ) ::=
             Start
        >->  Finish
        >->  processor [ Start, Finish ] ( )
ENDDEF


-- ----------------------------------------------------------------------------------------- --


PROCDEF  processors [ Start, Finish ] ( ) ::=
             processor [ Start, Finish ] ( )
        |||
             processor [ Start, Finish ] ( )
        |||
             processor [ Start, Finish ] ( )
ENDDEF


-- ----------------------------------------------------------------------------------------- --


PROCDEF  dispatcher [ Job, Dispatch ] ( ) ::=
             Job
        >->  Dispatch
        >->  dispatcher [ Job, Dispatch ]  ( )
ENDDEF


-- ----------------------------------------------------------------------------------------- --


MODELDEF Model ::=
    CHAN IN    Job
    CHAN OUT   Finish

    BEHAVIOUR

        HIDE  [ Job2Proc ]
        IN
                dispatcher [ Job, Job2Proc ]  ( )

            |[ Job2Proc ]|

                processors [ Job2Proc, Finish] ( )
        NI
ENDDEF

-- ----------------------------------------------------------------------------------------- --

CHANDEF Channels ::=
	Job, Finish
ENDDEF


